{
  "manifest_version": 3,
  "name": "WhatsApp Voice Translator",
  "version": "1.4.1",
  "description": "Translate WhatsApp voice messages to Turkish (auto language detection) with reply translation",
  "permissions": [
    "activeTab",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "http://localhost:3456/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["interceptor.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start",
      "world": "ISOLATED"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "WhatsApp Voice Translator"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://web.whatsapp.com/*"]
    }
  ]
}
